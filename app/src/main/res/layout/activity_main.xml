<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.aphrodite.writepaddemo.view.widget.view.JQDCanvas
        android:id="@+id/pen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip0"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip80"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/gain_picture"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="生成图片"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font15" />

        <Button
            android:id="@+id/gain_video"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="生成Video"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font15" />

        <Button
            android:id="@+id/gain_pdf"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="生成Pdf"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font15" />

        <Button
            android:id="@+id/undo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="撤销"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font15" />

        <Button
            android:id="@+id/save_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="保存图片"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font15" />

    </LinearLayout>

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip100"
        android:gravity="center"
        android:padding="@dimen/dip10"
        android:text="路径为：/storage/emulated/0/Android/data/com.aphrodite.writepaddemo/files/"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font12" />

</LinearLayout>